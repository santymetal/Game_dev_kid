{
  "name": "voice-builder",
  "version": "1.0.0",
  "description": "Voice-enabled creative platform for children to create games",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "NODE_ENV=development tsx server/index.ts",
    "build": "npm run build:client && npm run build:server",
    "build:client": "vite build client",
    "build:server": "esbuild server/index.ts --bundle --platform=node --target=node18 --format=esm --outfile=dist/index.js --external:@neondatabase/serverless",
    "start": "NODE_ENV=production node dist/index.js",
    "check": "tsc --noEmit",
    "setup": "npm install && echo 'Setup complete! Run: npm run dev'"
  },
  "keywords": ["voice", "games", "children", "creative", "education"],
  "author": "Voice Builder",
  "license": "MIT",
